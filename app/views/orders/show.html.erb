<section class="orders-show">
 
  <div class="order-summary jumbotron">
  <h4>Thank you! Your order has been placed successfully!</h4>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
  </div>

  <header class="page-header">
    <h1>My Order #<%= @order.id %> </h1>
    <h3>Placed by: <%= @order[:email] %></h3>
  </header>

    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |item| %>
            <%= render 'item', product: item[:product_info], quantity: item[:line_item][0][:quantity].to_i %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL PURCHASE:
            </th>
            <th>
              <%= number_to_currency(@order[:total_cents] / 100.00) %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

</section>
