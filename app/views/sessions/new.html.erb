<h1>Login</h1>
<%= form_tag '/login', method: :post, class: "form-group" do %>
  

  <%= label_tag :email, "Email:" %> 
  <%= text_field_tag :email, "", class: "form-control" %>
  <%= label_tag :password, "Password:" %> 
  <%= text_field_tag :password, "", class: "form-control" %>
  <%= submit_tag "Submit" %>
  

  <% end %>